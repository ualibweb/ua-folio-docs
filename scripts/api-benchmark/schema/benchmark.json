{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "api-benchmark Benchmark",
  "description": "Configuration for a benchmark to be ran",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "init": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "endpoint.json"
        }
      ]
    },
    "endpoints": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "endpoint.json"
        }
      ]
    },
    "teardown": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "endpoint.json"
        }
      ]
    },
    "runs": {
      "type": "number",
      "default": 100
    }
  },
  "required": ["id", "endpoints", "runs"],
  "additionalProperties": false
}
