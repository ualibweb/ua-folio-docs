{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "api-benchmark Internal Benchmark",
  "description": "Configuration for a benchmark to be used only (not itself ran)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "init": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "$ref": "endpoint.json"
          }
        ]
      }
    },
    "endpoints": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "$ref": "endpoint.json"
          }
        ]
      }
    },
    "teardown": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "$ref": "endpoint.json"
          }
        ]
      }
    },
    "internal": {
      "const": true
    }
  },
  "required": ["id", "endpoints", "internal"],
  "additionalProperties": false
}
